{
    "env": {
      "browser": true,
      "node": true,
      "es2020": true
    },
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true,
        "modules": true
      },
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "extends": [
      "plugin:react/recommended",
      "airbnb",
      "airbnb/hooks",
      "prettier"
    ],
    "plugins": ["react", "prettier"],
    "rules": {
        "react/prop-types": 1,
        "react/jsx-filename-extension": ["error",
          {
            "extensions": [".js"]
          }],
          "prettier/prettier": [
            "error",
            {
              "endOfLine": "lf",
              "semi": true,
              "singleQuote": true,
              "tabWidth": 2,
              "trailingComma": "es5"
            }
          ]
    }
  }